set -e

function doBuild {
  go build --tags $1 .
  rm -rf $1.app
  mkdir -p $1.app/Contents/MacOS
  mkdir -p $1.app/Contents/lib
  mv magnus $1.app/Contents/MacOS/$1
  cp ~/code/src/github.com/runningwild/glop/gos/darwin/lib/libglop.so lib/darwin/
  cp lib/darwin/* $1.app/Contents/lib/

  install_name_tool -change ./libfmodex.dylib @executable_path/../lib/libfmodex.dylib ./$1.app/Contents/MacOS/$1
  install_name_tool -change ./libfmodexL.dylib @executable_path/../lib/libfmodexL.dylib ./$1.app/Contents/MacOS/$1
  install_name_tool -change ./libfmodevent.dylib @executable_path/../lib/libfmodevent.dylib ./$1.app/Contents/MacOS/$1
  install_name_tool -change ./libfmodex.dylib @executable_path/../lib/libfmodex.dylib ./$1.app/Contents/lib/libfmodevent.dylib

  cp -r data/* $1.app/Contents/
}

#doBuild 'standard'
#open standard.app
#false

doBuild 'host'
#open host.app
doBuild 'client'
#doBuild 'client2'
#false

open host.app
sleep 0.9
open client.app
#open client2.app
